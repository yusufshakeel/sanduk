{
  "testEnvironment": "node",
  "verbose": true,
  "bail": true,
  "testRegex": "(unit).test.js$",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{js,jsx}",
    "!**/coverage/**",
    "!**/dist/**",
    "!**/node_modules/**",
    "!**/resources/**",
    "!**/src/main-process/constants/**",
    "!**/src/main-process/application-menu.js",
    "!**/src/main-process/file-management.js",
    "!**/src/main-process/main.js",
    "!**/src/renderer-process/app.js",
    "!**/src/renderer-process/constants/ui-constants.js",
    "!**/src/renderer-process/tools/**",
    "!**/src/static/**",
    "!**/test/**"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "functions": 100,
      "lines": 100
    }
  }
}
